<h1>Codial/<%= title %>
</h1>
<div id="home-container">
    <section id="feed-posts">
        <h4>Posts</h4>
        <% if (locals.user) { %>
            <form id="new-post-form" action="/posts/create" method="post">
                <textarea name="content" id="" cols="30" rows="3" placeholder="Type Here" required></textarea>
                <input type="submit" value="Post">
            </form>
            <% } %>
    </section>
    <section id="posts-list-container">
        <ul>
            <% post_items.forEach(post=> { %>
                <%- include('_post', {post: post}) %>
                    <% }) %>
        </ul>
    </section>

    <section id="user-friends">
        <h4>Friends</h4>
        <% for (u of all_users) { %>
            <p>
                <a href="/users/profile/<%= u.id %>">
                    <%= u.name %>
                </a>
            </p>
            <% } %>
    </section>
</div>