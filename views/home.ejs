<h1>Codial/<%= title %>
</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <% if (locals.user) { %>
        <form id="new-post-form" action="/posts/create" method="post">
            <textarea name="content" id="" cols="30" rows="3"></textarea>
            <input type="submit" value="Post" placeholder="Type Here">
        </form>
    <% } %>
</section>
<section id="posts-list-container">
    <ul>
        <% post_items.forEach(post=> { %>
            <div class="card">
                <li>
                    <p>
                        <small>
                            <%= post.user.name %>
                        </small>
                        <br>
                        <%= post.content %>
                    </p>
                </li>
            </div>
            <% }) %>
    </ul>
</section>